
@{
    Layout = null;
}

<html>
<head>
    <title>Admin Şifre Sıfırlama</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/AdminForgotPassword.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {   <h1 style="text-align: center">Şifre Sıfırlama</h1>
        <div class="input-group col-md-3  center-block" style="margin-top:60px">
            <input type="text" name="adminEmail" class="form-control" placeholder="Mail Adresi" />
            <input type="text" name="adminName" class="form-control" style="margin-top:30px" placeholder="İsim" />
            <input type="text" name="adminSurname" class="form-control" style="margin-top:30px" placeholder="Soyisim" />
            <button class="btn btn-success" type="submit" style="margin-top:10px">
                <i class="glyphicon glyphicon-send"> Gönder</i>
            </button>
        </div>
    }
</body>
</html>


@model Entities.Concrete.Admin
@{
    Layout = null;
}
<html>
<head>
    <title>Admin Kayıt Paneli</title>



    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script><link href="~/Content/AdminRegisterStyle.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Register", "AdminRegister", FormMethod.Post))
    {
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">Register</h3>
                                <div class="form-group">
                                    <label for="username" class="text-info">Mail:</label><br>
                                    <input type="text" name="adminMail" id="username" class="form-control">
                                </div>


                                <div class="form-group">
                                    <label for="name" class="text-info">Name:</label><br>
                                    <input type="text" name="adminName" id="username" class="form-control">
                                </div>


                                <div class="form-group">
                                    <label for="surname" class="text-info">Surname:</label><br>
                                    <input type="text" name="adminSurname" id="username" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label for="password" class="text-info">Password:</label><br>
                                    <input type="password" name="adminPassword" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <br />
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Register">
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </body>
</html>

@using Entities.Concrete
@model List<Supporter>
@{
    ViewBag.Title = "Supporter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    tr:nth-child(even) {
        background-color: #D6EEEE;
    }
</style>
<h2>Supporter</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Sponsor Logosu</th>
        <th>Sponsor Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.supporterId</td>
            <td>@item.SupporterImage</td>
            <td>@item.supporterName</td>
            <td><a href="/AdminSupporter/DeleteSupporter/@item.supporterId" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminSupporter/UpdateSupporter/@item.supporterId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/AdminSupporter/NewSupporter" class="btn btn-primary">Yeni Sponsor Ekle</a>


